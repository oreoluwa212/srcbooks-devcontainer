{
  "name": "Srcbook Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20",
  "postCreateCommand": "npm install -g srcbook",
  "postAttachCommand": "npx srcbook@latest start",
  "forwardPorts": [2150],
  "mounts": [
    "source=srcbook-output,target=/workspace/docs,type=bind"  // Bind mount docs directory to local machine
  ]
}
